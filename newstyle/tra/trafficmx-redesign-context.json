    "newGlobalCSS": {
      "description": "Clean professional base styles",
      "code": "@import \"tailwindcss\";\n\n/* Professional Design System */\n:root {\n  --bg-primary: #FFFFFF;\n  --bg-secondary: #F7F9FB;\n  --bg-tertiary: #F1F3F5;\n  \n  --text-primary: #18181B;\n  --text-secondary: #3F3F46;\n  --text-tertiary: #71717A;\n  --text-muted: #A1A1AA;\n  \n  --border-light: #F1F3F5;\n  --border-default: #E4E4E7;\n  --border-dark: #D4D4D8;\n  \n  --color-blue: #3B82F6;\n  --color-green: #22C55E;\n  --color-red: #EF4444;\n  --color-amber: #F59E0B;\n  \n  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);\n  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);\n  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);\n}\n\n* {\n  margin: 0;\n  padding: 0;\n  box-sizing: border-box;\n}\n\nbody {\n  font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;\n  background: var(--bg-primary);\n  color: var(--text-primary);\n  line-height: 1.5;\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n}\n\n/* Clean Scrollbar */\n::-webkit-scrollbar {\n  width: 8px;\n  height: 8px;\n}\n\n::-webkit-scrollbar-track {\n  background: var(--bg-secondary);\n}\n\n::-webkit-scrollbar-thumb {\n  background: var(--border-dark);\n  border-radius: 4px;\n}\n\n::-webkit-scrollbar-thumb:hover {\n  background: #A1A1AA;\n}"
    },

    "professionalCard": {
      "description": "TradingView-style card component",
      "code": "const Card = ({ children, className = '' }) => {\n  return (\n    <div className={`\n      bg-white\n      border border-gray-200\n      rounded-xl\n      shadow-sm\n      hover:shadow-md\n      transition-shadow\n      duration-200\n      ${className}\n    `}>\n      {children}\n    </div>\n  );\n};"
    },

    "professionalMetricCard": {
      "description": "Professional metric display",
      "code": "interface MetricCardProps {\n  title: string;\n  value: string | number;\n  change?: number;\n  trend?: 'up' | 'down' | 'neutral';\n  icon?: React.ReactNode;\n}\n\nconst MetricCard = ({ title, value, change, trend, icon }: MetricCardProps) => {\n  const trendColor = trend === 'up' ? 'text-green-600' : trend === 'down' ? 'text-red-600' : 'text-gray-600';\n  const trendBg = trend === 'up' ? 'bg-green-50' : trend === 'down' ? 'bg-red-50' : 'bg-gray-50';\n  \n  return (\n    <div className=\"bg-white border border-gray-200 rounded-xl p-6 hover:shadow-md transition-shadow\">\n      <div className=\"flex items-start justify-between mb-4\">\n        <span className=\"text-sm font-medium text-gray-600\">{title}</span>\n        {icon && (\n          <div className=\"w-8 h-8 rounded-lg bg-blue-50 flex items-center justify-center text-blue-600\">\n            {icon}\n          </div>\n        )}\n      </div>\n      <div className=\"text-3xl font-bold text-gray-900 mb-2\">{value}</div>\n      {change !== undefined && (\n        <div className={`inline-flex items-center gap-1 px-2 py-1 rounded-md text-xs font-medium ${trendColor} ${trendBg}`}>\n          {trend === 'up' ? '↑' : trend === 'down' ? '↓' : '→'}\n          {Math.abs(change)}%\n        </div>\n      )}\n    </div>\n  );\n};"
    },

    "professionalButton": {
      "description": "Clean button components",
      "code": "// Primary Button\n<button className=\"\n  px-5 py-2.5\n  bg-blue-600\n  text-white\n  text-sm\n  font-semibold\n  rounded-lg\n  hover:bg-blue-700\n  active:bg-blue-800\n  transition-colors\n  shadow-sm\n\">\n  Primary Action\n</button>\n\n// Secondary Button\n<button className=\"\n  px-5 py-2.5\n  bg-white\n  text-gray-700\n  text-sm\n  font-semibold\n  rounded-lg\n  border border-gray-300\n  hover:bg-gray-50\n  active:bg-gray-100\n  transition-colors\n\">\n  Secondary Action\n</button>"
    },

