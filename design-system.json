{
  "designSystem": {
    "name": "TraficMX Professional",
    "version": "2.0.0",
    "defaultTheme": "light",
    "description": "Professional traffic intelligence platform design system with light mode first approach",
    
    "colorPalette": {
      "light": {
        "background": {
          "primary": "#ffffff",
          "secondary": "#f8fafc",
          "tertiary": "#f1f5f9",
          "card": "#ffffff",
          "elevated": "#ffffff"
        },
        "text": {
          "primary": "#0f172a",
          "secondary": "#475569",
          "tertiary": "#64748b",
          "inverse": "#ffffff"
        },
        "border": {
          "light": "#e2e8f0",
          "medium": "#cbd5e1",
          "dark": "#94a3b8"
        },
        "brand": {
          "primary": "#0ea5e9",
          "primaryHover": "#0284c7",
          "primaryLight": "#e0f2fe",
          "primaryDark": "#075985",
          "secondary": "#14b8a6",
          "secondaryHover": "#0d9488",
          "secondaryLight": "#ccfbf1"
        },
        "semantic": {
          "success": "#10b981",
          "successLight": "#d1fae5",
          "warning": "#f59e0b",
          "warningLight": "#fef3c7",
          "error": "#ef4444",
          "errorLight": "#fee2e2",
          "info": "#3b82f6",
          "infoLight": "#dbeafe"
        }
      },
      "dark": {
        "background": {
          "primary": "#0a0e1b",
          "secondary": "#0f1729",
          "tertiary": "#141f38",
          "card": "#0f1729",
          "elevated": "#1a2847"
        },
        "text": {
          "primary": "#f1f5f9",
          "secondary": "#cbd5e1",
          "tertiary": "#94a3b8",
          "inverse": "#0f172a"
        },
        "border": {
          "light": "#1e293b",
          "medium": "#334155",
          "dark": "#475569"
        },
        "brand": {
          "primary": "#38bdf8",
          "primaryHover": "#0ea5e9",
          "primaryLight": "#075985",
          "primaryDark": "#0c4a6e",
          "secondary": "#14b8a6",
          "secondaryHover": "#0d9488"
        }
      }
    },
    
    "typography": {
      "fontFamilies": {
        "display": "Inter Tight, SF Pro Display, system-ui, sans-serif",
        "heading": "Inter, system-ui, sans-serif",
        "body": "Inter, system-ui, sans-serif",
        "mono": "JetBrains Mono, SF Mono, Consolas, monospace"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem"
      },
      "fontWeights": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "lineHeights": {
        "none": 1,
        "tight": 1.25,
        "snug": 1.375,
        "normal": 1.5,
        "relaxed": 1.625,
        "loose": 2
      }
    },
    
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem"
    },
    
    "borderRadius": {
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "full": "9999px"
    },
    
    "shadows": {
      "xs": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "sm": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
    },
    
    "components": {
      "button": {
        "primary": {
          "background": "var(--brand-primary)",
          "color": "#ffffff",
          "padding": "0.625rem 1.25rem",
          "borderRadius": "var(--radius-md)",
          "fontSize": "0.875rem",
          "fontWeight": 600,
          "height": "2.5rem",
          "hover": {
            "background": "var(--brand-primary-hover)",
            "transform": "translateY(-1px)",
            "boxShadow": "var(--shadow-md)"
          }
        },
        "secondary": {
          "background": "transparent",
          "color": "var(--text-secondary)",
          "border": "1px solid var(--border-medium)",
          "padding": "0.625rem 1.25rem",
          "borderRadius": "var(--radius-md)",
          "fontSize": "0.875rem",
          "fontWeight": 600,
          "height": "2.5rem",
          "hover": {
            "background": "var(--bg-secondary)",
            "color": "var(--text-primary)",
            "borderColor": "var(--border-dark)"
          }
        }
      },
      "card": {
        "background": "var(--bg-card)",
        "border": "1px solid var(--border-light)",
        "borderRadius": "var(--radius-xl)",
        "padding": "2rem",
        "boxShadow": "var(--shadow-sm)",
        "hover": {
          "transform": "translateY(-4px)",
          "boxShadow": "var(--shadow-xl)",
          "borderColor": "var(--brand-primary)"
        }
      },
      "input": {
        "background": "var(--bg-secondary)",
        "border": "1px solid var(--border-medium)",
        "borderRadius": "var(--radius-md)",
        "padding": "0.75rem 1rem 0.75rem 3rem",
        "fontSize": "0.9375rem",
        "height": "3rem",
        "focus": {
          "borderColor": "var(--brand-primary)",
          "boxShadow": "0 0 0 3px var(--brand-primary-light)",
          "background": "var(--bg-primary)"
        }
      }
    },
    
    "layout": {
      "navbar": {
        "height": "72px",
        "maxWidth": "1280px",
        "padding": "0 2rem",
        "background": "rgba(255, 255, 255, 0.8)",
        "backdropFilter": "blur(20px)",
        "borderBottom": "1px solid var(--border-light)"
      },
      "container": {
        "maxWidth": "1280px",
        "padding": "0 2rem"
      },
      "section": {
        "padding": "5rem 2rem"
      }
    },
    
    "grid": {
      "stats": {
        "columns": 3,
        "gap": "1.5rem",
        "maxWidth": "56rem"
      },
      "bento": {
        "columns": 12,
        "gap": "1.5rem",
        "maxWidth": "1280px"
      }
    },
    
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    
    "animation": {
      "duration": {
        "fast": "0.2s",
        "normal": "0.3s",
        "slow": "0.5s"
      },
      "easing": {
        "default": "ease",
        "in": "ease-in",
        "out": "ease-out",
        "inOut": "ease-in-out"
      }
    }
  }
}
